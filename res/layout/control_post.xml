<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@drawable/corners_bg">
    
    <LinearLayout 
        android:id="@+id/control_post_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">
        
        <TextView
            android:id="@+id/control_post_title_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000" />
        
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            
            <TextView
	            android:id="@+id/control_post_short_desc"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="14sp"
	            android:layout_alignParentTop="true"
	            android:layout_alignParentLeft="true"/>
            
        	<TextView
	            android:id="@+id/control_post_time"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignBottom="@id/control_post_short_desc"
        		android:layout_alignParentRight="true"
        		android:textSize="13sp"/>
            
        </RelativeLayout>
            
        
        
    </LinearLayout>
    
    <ImageView
        android:id="@+id/control_post_big_image"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:layout_gravity="center"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter" />
    
    <ListView
        android:id="@+id/control_post_postlinks"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        android:padding="10dp" />
</LinearLayout>
